{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "outDir": "./dist",
    "rootDir": "./",
    "noImplicitAny": false,
  },
  "include": ["**/*.ts", "public/**/*.html", "public/**/*.css", "public/**/*.js"],
  "exclude": ["node_modules", "dist"]
}